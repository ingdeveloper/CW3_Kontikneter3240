    margin-bottom: 0px;
}

.ccw-hand-cursor {
    cursor: pointer;
}

.ccw-help-cursor {
    cursor: help;
}

.ccw-default-cursor {
    cursor: default;
}

tr .ziffertd {
    width: 80px;
    font-size: xx-large;
    text-align: center;
}

.zifferbutton {
    width: 70px;
    font-size: x-large;
    margin: 5px;
}

