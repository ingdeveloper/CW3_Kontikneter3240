    z-index: auto;
    
}

.myRahmen {
    border: 1px solid red;
    /*position: relative;*/
    /*box-sizing: border-box;*/
    /*float:left;*/
}

.mywidth1 {
    width: 100%;
    position: relative;
    float: left;
}

.ccw-btn-xs {
    padding: 2px 2px;
    font-size: 10px;
    line-height: 12px;
    border-radius: 2px;
}

.ccw-text-bottom {
    vertical-align: bottom !important;
}

.ccw-value-rahmen-gelb {
    /*display: inline;*/
    /*width: 70%;*/
    text-align: center;
    padding: 0px 2px;
    margin: 0px;
    /*height: 12px;*/
    background-color: #f8d721 !important;
    border: 1px solid grey;
    border-radius: 2px;
}

.ccw-bg-transparent {
    background-color: transparent !important;
}

.ccw-bg-yellow {
    background-color: #ffff00 !important;
}

.ccw-bg-lime {
    background-color: limegreen !important;
}

.ccw-bg-noInput {
    background-color: #edecec !important;
}

.ccw-value-OnlyRead {
    border: 1px solid #C6C6C6;
    border-radius: 2px;
    text-align: center;
    margin: 1px 2px;
    padding: 0px 2px;
}

.ccw-loader {
    position: absolute;
    /*top: auto;
    left: auto;*/
    margin-left: auto !important;
    margin-right: auto !important;
}

.ccw-loader.active {
    animation: 1s linear infinite spinner_animation;
    border-color: #000000 #000000 #000000 #e92931;
    border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) #e92931;
    border-style: solid;
    border-width: 0.3em;
    font-size: 12px;
    text-indent: -9999em;
    visibility: hidden;
    color: #e92931;
    z-index: 10000;
    visibility: visible;
}

.ccw-loader,
.ccw-loader:after {
    border-radius: 50%;
    overflow: hidden;
    width: 30px;
    height: 30px;
}


.svg-container { 
	display: inline-block;
	position: relative;
	width: 100%;
	padding-bottom: 100%; 
	vertical-align: middle; 
	overflow: hidden; 
}

.svg-content { 
	display: inline-block;
	position: absolute;
	top: 0;
	left: 0;
}

.ccwContainerZeichnung {
    position: relative;
    height: 700px;
    min-width: 1140px;
    -moz-transform-origin: 0 0;
    -ms-transform-origin: 0 0;
    -o-transform-origin: 0 0;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
}
