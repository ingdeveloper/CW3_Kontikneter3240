/****************************************************
    CSS für CoWie Seite, allgemeine CSS
*****************************************************/

body {
    background-color: rgba(211, 211, 211, 0.10);
}

.kopfzeile {
    padding-left: 5px;
    padding-right: 5px;
    padding-top: 1px;
}

.cw_frame_alarm_viewer {
    background: url("../svg/frame_alarm_viewer.svg") no-repeat center;
    position: relative;
    height: 100%;
    width: 100%;
    margin-top: 0px;
    margin-bottom: 0px;
    -moz-transform-origin: 0;
    -ms-transform-origin: 0;
    -o-transform-origin: 0;
    -webkit-transform-origin: 0;
    transform-origin: 0;
    font-size: 20px;
}

.ccw_wf_value_frame {
    border: 1px solid #adadad;
    padding: 3px;
    margin: 1px;
    height: auto;
    text-align: center;
    border-radius: 3px;
    font-size: 13px;
    font-family: Arial;
    background-color: transparent;
}

/*Überschreiben der .panel -Eigenschaft in der Datei bootstrap.css*/

